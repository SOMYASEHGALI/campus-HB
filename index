    <script>
        const BULK_PASSWORD = 'hiring@18092025';
        let allJobs = [];
        let bulkFilesMap = new Map();
        let bulkAccessGranted = false;

        // Initialize app
        function init() {
            loadJobs();
            setupEventListeners();
        }

        function setupEventListeners() {
            document.getElementById('passwordInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') checkBulkPassword();
            });
        }

        // Open bulk upload with password protection
        function openBulkWithPassword() {
            if (bulkAccessGranted) {
                switchTab('bulk', document.querySelectorAll('.tab-btn')[2]);
            } else {
                document.getElementById('passwordModal').style.display = 'flex';
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordError').style.display = 'none';
                setTimeout(() => document.getElementById('passwordInput').focus(), 100);
            }
        }

        // Check password
        function checkBulkPassword() {
            const password = document.getElementById('passwordInput').value;
            const errorDiv = document.getElementById('passwordError');
            
            if (password === BULK_PASSWORD) {
                bulkAccessGranted = true;
                document.getElementById('passwordModal').style.display = 'none';
                document.getElementById('passwordInput').value = '';
                
                // Switch to bulk tab
                const bulkBtn = document.querySelectorAll('.tab-btn')[2];
                switchTab('bulk', bulkBtn);
            } else {
                errorDiv.style.display = 'block';
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordInput').focus();
            }
        }

        // Load jobs from Google Sheets
        function loadJobs() {
            const jobsList = document.getElementById('jobsList');
            const loader = document.getElementById('jobsLoader');
            loader.classList.add('active');
            jobsList.innerHTML = '';

            google.script.run.withSuccessHandler((jobs) => {
                loader.classList.remove('active');
                allJobs = jobs;
                populateJobsList(jobs);
                populateJobSelect(jobs);
            }).withFailureHandler((error) => {
                loader.classList.remove('active');
                jobsList.innerHTML = '<div class="no-jobs"><div class="no-jobs-icon">‚ùå</div><p>Error loading jobs. Please refresh the page.</p></div>';
                console.error('Error loading jobs:', error);
            }).getJobsFromSheet();
        }

        // Populate jobs display
        function populateJobsList(jobs) {
            const jobsList = document.getElementById('jobsList');
            
            if (jobs.length === 0) {
                jobsList.innerHTML = '<div class="no-jobs"><div class="no-jobs-icon">üíº</div><p>No jobs posted yet. Check back soon!</p></div>';
                return;
            }

            jobsList.innerHTML = jobs.map(job => `
                <div class="job-card" onclick="toggleJobCard(this)">
                    <div class="job-title">${escapeHtml(job.title)}</div>
                    <div class="job-company">${escapeHtml(job.company)}</div>
                    <div class="job-meta">
                        <span class="job-meta-item job-location">üìç ${escapeHtml(job.location)}</span>
                        <span class="job-meta-item">üí∞ ${escapeHtml(job.salary)}</span>
                        <span class="job-meta-item">üìà ${escapeHtml(job.experience)}</span>
                    </div>
                    <div class="job-description">
                        <p><strong>About the Role:</strong><br>${escapeHtml(job.description)}</p>
                        <p><strong>Skills Required:</strong> ${escapeHtml(job.skills)}</p>
                        <button class="apply-btn" onclick="event.stopPropagation(); applyForJob(${job.id})">Apply Now</button>
                    </div>
                </div>
            `).join('');
        }

        // Populate job dropdowns
        function populateJobSelect(jobs) {
            const select = document.getElementById('jobSelect');
            const bulkSelect = document.getElementById('bulkJobSelect');
            select.innerHTML = '<option value="">-- Choose a job --</option>';
            bulkSelect.innerHTML = '<option value="">-- Choose a job --</option>';
            
            jobs.forEach(job => {
                const option = document.createElement('option');
                option.value = job.id;
                option.textContent = `${job.title} - ${job.company} (${job.location})`;
                select.appendChild(option);

                const bulkOption = document.createElement('option');
                bulkOption.value = job.id;
                bulkOption.textContent = `${job.title} - ${job.company} (${job.location})`;
                bulkSelect.appendChild(bulkOption);
            });
        }

        // Toggle job card expansion
        function toggleJobCard(card) {
            document.querySelectorAll('.job-card').forEach(c => {
                if (c !== card) c.classList.remove('expanded');
            });
            card.classList.toggle('expanded');
        }

        // Apply for job
        function applyForJob(jobId) {
            const applyBtn = document.querySelectorAll('.tab-btn')[1];
            switchTab('apply', applyBtn);
            document.getElementById('jobSelect').value = jobId;
            document.getElementById('jobSelect').focus();
        }

        // Switch tabs
        function switchTab(tabName, btn) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            
            const tabEl = document.getElementById(tabName);
            if (tabEl) tabEl.classList.add('active');
            if (btn) btn.classList.add('active');
        }

        // Update file name display
        function updateFileName(input, elementId) {
            const fileNameDiv = document.getElementById(elementId);
            if (input.files && input.files[0]) {
                fileNameDiv.textContent = '‚úì ' + input.files[0].name;
                fileNameDiv.classList.add('active');
            } else {
                fileNameDiv.classList.remove('active');
            }
        }

        // Display bulk files with input fields
        function displayBulkFiles() {
            const input = document.getElementById('bulkFiles');
            const filesList = document.getElementById('bulkFilesList');
            bulkFilesMap.clear();
            filesList.innerHTML = '';

            if (input.files.length === 0) {
                filesList.style.display = 'none';
                return;
            }

            filesList.style.display = 'block';

            Array.from(input.files).forEach((file, index) => {
                const item = document.createElement('div');
                item.className = 'bulk-file-item';
                item.innerHTML = `
                    <div class="bulk-file-item-header">üìÑ ${escapeHtml(file.name)}</div>
                    <input type="text" placeholder="Student Name" class="bulk-name-${index}" style="width: 100%; padding: 8px; margin-bottom: 8px; border: 1px solid var(--border); border-radius: 3px;">
                    <input type="email" placeholder="Email Address" class="bulk-email-${index}" style="width: 100%; padding: 8px; margin-bottom: 8px; border: 1px solid var(--border); border-radius: 3px;">
                    <input type="tel" placeholder="Phone Number" class="bulk-phone-${index}" style="width: 100%; padding: 8px; border: 1px solid var(--border); border-radius: 3px;">
                `;
                filesList.appendChild(item);
                bulkFilesMap.set(index, file);
            });
        }

        // Handle student application submission
        document.getElementById('applicationForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.textContent;
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';

            const jobId = document.getElementById('jobSelect').value;
            const studentName = document.getElementById('studentName').value;
            const studentEmail = document.getElementById('studentEmail').value;
            const collegeName = document.getElementById('collegeName').value;
            const rollNumber = document.getElementById('rollNumber').value;
            const phoneNumber = document.getElementById('phoneNumber').value;
            const coverLetter = document.getElementById('coverLetter').value;
            const resumeFile = document.getElementById('resume').files[0];

            if (!jobId || !resumeFile) {
                showMessage('applyMessage', 'Please select a job and upload your resume', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const resumeData = e.target.result;
                const resumeName = resumeFile.name;

                google.script.run.withSuccessHandler(() => {
                    showMessage('applyMessage', '‚úÖ Application submitted successfully! We will review and contact you soon.', 'success');
                    document.getElementById('applicationForm').reset();
                    document.getElementById('fileName').classList.remove('active');
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                    setTimeout(() => {
                        document.getElementById('applyMessage').style.display = 'none';
                    }, 6000);
                }).withFailureHandler((error) => {
                    showMessage('applyMessage', '‚ùå Error submitting application. Please try again.', 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                    console.error('Error:', error);
                }).submitApplication(jobId, studentName, studentEmail, collegeName, rollNumber, phoneNumber, resumeName, resumeData, coverLetter);
            };

            reader.readAsDataURL(resumeFile);
        });

        // Handle bulk upload submission
        document.getElementById('bulkForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = document.getElementById('bulkSubmitBtn');
            const originalText = submitBtn.textContent;
            submitBtn.disabled = true;
            submitBtn.textContent = 'Uploading...';

            const jobId = document.getElementById('bulkJobSelect').value;
            const college = document.getElementById('bulkCollege').value;
            const batch = document.getElementById('bulkBatch').value;
            const notes = document.getElementById('bulkNotes').value;

            if (!jobId) {
                showMessage('bulkMessage', '‚ùå Please select a job for bulk upload', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
                return;
            }

            const filesData = [];
            for (let [index, file] of bulkFilesMap) {
                const name = document.querySelector(`.bulk-name-${index}`).value;
                const email = document.querySelector(`.bulk-email-${index}`).value;
                const phone = document.querySelector(`.bulk-phone-${index}`).value;

                if (!name || !email || !phone) {
                    showMessage('bulkMessage', '‚ùå Please fill in name, email, and phone for all files', 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                    return;
                }

                const reader = new FileReader();
                await new Promise((resolve, reject) => {
                    reader.onload = function(e) {
                        filesData.push({
                            name: file.name,
                            mimeType: file.type,
                            data: e.target.result,
                            student_name: name,
                            email: email,
                            phone: phone
                        });
                        resolve();
                    };
                    reader.onerror = reject;
                    reader.readAsDataURL(file);
                });
            }

            const payload = {
                jobId: jobId,
                college: college,
                batch: batch,
                notes: notes,
                files: filesData
            };

            google.script.run.withSuccessHandler((res) => {
                showMessage('bulkMessage', `‚úÖ Successfully uploaded ${res.uploaded} resumes!`, 'success');
                document.getElementById('bulkForm').reset();
                document.getElementById('bulkFilesList').innerHTML = '';
                bulkFilesMap.clear();
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
                setTimeout(() => {
                    document.getElementById('bulkMessage').style.display = 'none';
                }, 6000);
            }).withFailureHandler((error) => {
                showMessage('bulkMessage', '‚ùå Error uploading resumes. Please try again.', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
                console.error('Error:', error);
            }).submitBulkResumes(payload);
        });

        // Show message
        function showMessage(elementId, message, type) {
            const msgEl = document.getElementById(elementId);
            msgEl.textContent = message;
            msgEl.className = `message ${type}`;
            msgEl.style.display = 'block';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return String(text).replace(/[&<>"']/g, m => map[m]);
        }

        // Initialize on page load
        window.addEventListener('load', init);
    </script>
</body>
</html>
