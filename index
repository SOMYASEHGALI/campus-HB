    <div class="container">
        <header>
            <h1>üéØ Campus H.B.</h1>
            <p>Connect placement cells, training centres, and students - All in one platform</p>
        </header>

        <!-- PASSWORD MODAL -->
        <div id="passwordModal" class="password-modal-overlay" style="display: none;">
            <div class="password-modal">
                <h2>üîê Placement Cell Access</h2>
                <p>Enter password to access bulk upload feature</p>
                <input type="password" id="passwordInput" placeholder="Enter password" autocomplete="current-password">
                <button onclick="checkBulkPassword()">Access Bulk Upload</button>
                <div id="passwordError" class="password-error">‚ùå Incorrect password. Try again.</div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab-btn active" onclick="switchTab('jobs', this)">üìã View Jobs</button>
            <button class="tab-btn" onclick="switchTab('apply', this)">üìù Student Application</button>
            <button class="tab-btn" onclick="openBulkWithPassword()">üì§ Bulk Upload for Placement Cell </button>
        </div>

        <!-- JOBS TAB -->
        <div id="jobs" class="tab-content active">
            <div class="section">
                <h2>Available Job Openings</h2>
                <div class="loader" id="jobsLoader">
                    <div class="spinner"></div>
                    <p>Loading jobs...</p>
                </div>
                <div id="jobsList"></div>
            </div>
        </div>

        <!-- STUDENT APPLICATION TAB -->
        <div id="apply" class="tab-content">
            <div class="section">
                <h2>Submit Your Application</h2>
                <div id="applyMessage" class="message"></div>
                
                <form id="applicationForm">
                    <div class="form-group">
                        <label for="jobSelect">Select Job *</label>
